<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_pricipal"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/container_user"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="344dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>


        <ImageView
            android:id="@+id/imageuser2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_user"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="344dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="100dp"
            android:text="@string/titulo_secundario"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTitulodaPublicação"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_titulo"
            android:padding="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_edittext"
            />

        <EditText
            android:id="@+id/editPublicação"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_edittext"
            android:hint="@string/hint_Publicação"
            android:padding="90dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="400dp"
            android:src="@drawable/ic_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="100dp"
            android:text="@string/titulo_foto"
            android:textColor="@color/black"
            android:layout_marginTop="400dp"
            android:textSize="28sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="70dp"
            android:backgroundTint="@color/blue"
            android:padding="3dp"
            android:text="@string/hint_Editar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24dp" />




        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="291dp"
            android:layout_marginStart="0dp">

            <include layout="@layout/menu_component" />

        </FrameLayout>

    </FrameLayout>




</LinearLayout>
